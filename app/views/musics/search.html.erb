<div class="col-md-8 col-md-2 mx-auto">

<!--検索窓を追加-->
<h3>曲名で検索</h3>
<%= form_with url: search_post_musics_path, method: :get, local: true do |form| %>
<%= form.text_field :search %>
<%= form.submit '曲名検索', name: nil %>

<!--RSpotifyで検索した結果を表示させる-->
  <h1>検索結果</h1>
</div>
  <% if @musics.present? %>
  <% @musics.each do |music| %>
  <div class="col-md-8 col-md-2 mx-auto">
    <div class="card bg-dark">
      <div>
        <%= music.name %>/<%= music.artists[0] %>
      <% if music.preview_url.present? %>
        <div class="spotify_preview_url">
          <iframe src=<%=  music.preview_url %> width="300" height="140"></iframe>
        </div>
      <% end %>
        </div>
        </div>
        </div>
  <% end %>
  <% end %>
<% end %>
