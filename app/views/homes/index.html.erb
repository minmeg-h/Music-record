<div class="container">
 <div class="row">
   <div class="text-center">
    <h2>このページは仮のトップページです!</h2>
      <% if user_signed_in? %>
        <div class="button-wrap">
          <%= link_to "プロフィール",user_path(current_user), class: "btn btn-primary" %>
        </div>

        <div class="button-wrap">
          <%= link_to "サインアウト",  destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
        </div>
        <p><i class="fab fa-twitter"></i>ここにアイコンを表示</p>
        <% end %>

        <h3>アーティスト名で検索</h3>
<%= form_with method: :get, local: true do |form| %>
<%= form.text_field :search %>
<%= form.submit 'アーティスト名検索', name: nil %>


<% end %>



<h1>検索結果</h1>
<div>
  <% if @searchartists.present? %>
    <% @searchartists.each do |searchartist| %>
      <div>
        <h3><%= searchartist.name %></h3>
          <% end %>

          <% end %>
      </div>

    </div>
  </div>
</div>
