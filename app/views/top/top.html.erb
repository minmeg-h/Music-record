                      <div class="btn-group-vertical">
                      <%= link_to "新規登録する", new_user_registration_path,  class: "btn btn-success" %>
                      <%= link_to "ログイン", new_user_session_path , class: "btn btn-primary" %>
                      <a href="#" class="btn btn-info">かんたんログイン</a>
